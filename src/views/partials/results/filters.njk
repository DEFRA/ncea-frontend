{% from 'govuk/components/select/macro.njk' import govukSelect %}
{% from 'govuk/components/button/macro.njk' import govukButton %}

<h2 class='govuk-heading-m filter-heading govuk-section-break--visible govuk-!-padding-bottom-2 govuk-!-margin-bottom-2'>
  Filters
</h2>

{{ govukSelect({
  id: 'resourceType',
  name: 'resourceType',
  label: {
    text: 'Resource type',
    classes: 'filter-options-label'
  },
  items: resourceTypeOptions,
  formGroup: {
    classes: 'govuk-section-break--visible govuk-!-padding-bottom-4 govuk-!-margin-bottom-3'
  },
  classes: 'filterOptions'
}) }}

{{ govukButton({
  text: 'Filter results',
  id: 'filter_results',
  classes: 'filter-button govuk-!-margin-bottom-3'
}) }}

<a href='javascript:void(0)' id='reset_filter' class='govuk-link filter-reset'>Reset filters</a>