{% extends "layout/default.njk" %}

{% from "partials/quick_search/macro.njk" import quickSearch %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ super() }}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: routes.homePage,
        attributes: {
          'data-do-storage-reset': ''
        }
      },
      {
        text: "Search results",
        href: "#"
      }
    ]
  }) }}
{% endblock %}
{% block content %}

  {{ quickSearch({
    isResultPage: true,
    searchPath: routes.searchResults,
    formId: formId,
    searchInputError : searchInputError
  }) }}

  {%if searchInputError === undefined %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third" {% if not hasError %} id="filter-block" data-action="{{routes.getFilters}}" data-fetch-filters {% endif %}>&nbsp;</div>
      {% block resultsBlock %}{% endblock %}
    </div>
  {% endif %}

{% endblock %}

{% block bodyEnd %}
  {{ super() }}
  <script type="module" src="{{ assetPath }}/scripts/dataModal.js"></script>
{% endblock %}