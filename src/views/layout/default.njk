      homepageUrl: "https://www.gov.uk/",
      serviceName: serviceName,
      serviceUrl: routes.homePage
    }) }}
  </header>
{% endblock %}

{% set mainClasses = "app-main-class" %}

{% block main %}
  {{ super() }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: { text: "Beta" },
    html: 'This is a new service - your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
  }) }}
{% endblock %}

{% block bodyStart %}
  {{ govukCookieBanner({
    ariaLabel: "Cookies on "+serviceName,
    attributes: { id: "cookie_banner" },
    messages: [
      {
        headingText: "Cookies on "+serviceName,
        html: cookieHtml,
        hidden: true,
        actions: [
          {
            text: "Accept analytics cookies",
            type: "button",
            attributes: { id: "accept_button" }
          },
          {
            text: "Reject analytics cookies",
            type: "button",
            attributes: { id: "reject_button" }
          },
          {
            text: "View cookies",
            href: routes.cookiePolicy,
            classes: "help-link"
          }
        ],
        attributes: { id: "cookie_block" }
      },
      {
        html: acceptHtml,
        role: "alert",
        hidden: true,
        actions: [
          {
            text: "Hide cookie message",
            type: "button",
            classes: "hide_button"
          }
        ],
        attributes: { id: "accept_block" }
      },
      {
        html: rejectHtml,
        role: "alert",
        hidden: true,
        actions: [
          {
            text: "Hide cookie message",
            type: "button",
            classes: "hide_button"
          }
        ],
        attributes: { id: "reject_block" }
      }
    ]
  }) }}
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: routes.help,
          text: "Help"
        },
        {
          href: routes.privacyPolicy,
          text: "Privacy"
        },
        {
          href: routes.cookiePolicy,
          text: "Cookies"
        },
        {
          href: routes.accessibilityStatement,
          text: "Accessibility statement"
        },
        {
          href: routes.termsAndConditions,
          text: "Terms and conditions"
        }
      ]
    }
  }) }}
  <div id="overlay" class="overlay"></div>
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script type="module" src="{{ assetPath }}/all.js"></script>
  <script type="module">
    import {initAll} from '{{ assetPath }}/all.js'
    initAll()
  </script>
  <script>
    const appInsightsConnString = "{{ appInsightsConnectionString }}";
  </script>
  <script type="text/javascript" src="{{ assetPath }}/scripts/appinsights.js"></script>
  <script type="module" src="{{ assetPath }}/scripts/customScripts.js"></script>
  <script type="module" src="{{ assetPath }}/scripts/cookieScript.js"></script>
{% endblock %}