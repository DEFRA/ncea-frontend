{% extends "layout/default.njk" %}

{% from "partials/quick_search/macro.njk" import quickSearch %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <header class="full-width-banner" role="banner">
    <div class="banner-container">
      <h1 class="govuk-heading-xl banner-container__heading-xl">Natural Capital Search Service</h1>
      <span class="govuk-caption-l banner-container__caption-l">Use this service to search for data and information about the environment and ecosystems in the UK. This service can be used to support natural capital approaches to evidence and decision making</span>
    </div>
  </header>

  {{ quickSearch({
    searchPath: routes.searchResults,
    formId: quickSearchFID,
    isResultPage: false,
    searchInputError : searchInputError
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-m">
        Questionnaire search
      </h2>
      <p class="govuk-body">
        A set of questions to narrow down your search for data and information.<br> 
        This may be useful if you're not sure what you're looking for.
      </p>
    </div>
  </div>

  {{ govukButton({
    id: 'guided-search',
    name: 'guided-search',
    text: "Start",
    isStartButton: true,
    href: routes.guidedSearch,
    attributes: {
      'data-do-quick-search': false
    }
  }) }}

  <article class="govuk-grid-row" role="article">
    <div class="govuk-grid-column-full video-container">
      <h1 class="govuk-heading-m govuk-\!-static-margin-0 video-container__heading-m">What is natural capital?</h1>
      <div class="video-container__frame">
        <iframe width="630" height="354" src="https://www.youtube.com/embed/4wx0rMruSJo?si=h-SD8VoSUSNwqo1S" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
      </div>
    </div>
  </article>
{% endblock %}