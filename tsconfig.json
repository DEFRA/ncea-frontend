{
  "$schema": "https://json.schemastore.org/tsconfig",
  "typedocOptions": {
    "entryPoints": ["src/**/*.ts"],
    "out": "docs",
    "name": "Natural Capital and Ecosystem Assessment"
  },
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "rootDir": "src/",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "types": [
      "node",
      "jest",
      "hapi__vision",
      "nunjucks",
      "hapi-pino",
      "jsdom",
      "./src/types/types.d.ts",
      "joi"
    ],
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "coverage", "reports", "tools", "tests"]
}
