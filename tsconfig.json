{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES6", "dom"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src/",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "hapi__vision",
      "nunjucks",
      "hapi-pino",
      "jsdom",
      "./src/types/types.d.ts",
      "joi"
    ],
    "moduleDetection": "force",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "build", "coverage", "reports", "tools", "tests"]
}
