{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],

    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",

    "allowJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,

    "outDir": "build",
    "rootDir": "./",
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "hapi__vision",
      "nunjucks",
      "hapi-pino",
      "jsdom",
      "joi"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "public/**/*"],
  "exclude": ["node_modules", "build"]
}
